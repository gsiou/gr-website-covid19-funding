{

  "manifest_version": 2,
  "name": "Greek Website Covid19 Campaign Funding",
  "description": "See whether the news websites you visit have received government funding for the COVID19 campaign.",
  "version": "0.4.1",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  },

  "browser_action": {
    "default_icon": "icons/scroll.png",
    "default_title" : "Website Funding List",
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "icons/scroll16.png",
    "48": "icons/scoll48.png",
    "128": "icons/scroll128.png"
  },

  "background": {
    "scripts": ["browser-polyfill.js", "data.js", "background.js"]
  },

  "permissions": ["tabs"]
}
